                <h1><a href=@Url.Action("Index", "Home")> CACHIN' CASH</a></h1>
            </div>
        </div>
        <!-- BEGIN SIDEBAR -->
        <div class="left side-menu">
            <div class="body rows scroll-y">
                <!-- Scrolling sidebar -->
                <div class="sidebar-inner slimscroller">

                    <!-- User Session -->
                    <div class="media">
                        @*<a class="pull-left" href="">
                                <img class="media-object img-circle" src="assets/img/avatar/masarie.jpg" alt="Avatar">
                            </a>*@
                        <div class="media-body">
                            Welcome back,
                            <h4 class="media-heading"><strong>DISPLAY NAME</strong></h4>
                            <a class="md-trigger" data-modal="logout-modal-alt">Logout</a>
                        </div><!-- End div .media-body -->
                    </div><!-- End div .media -->
                    <!-- Search form -->
                    @*<div id="search">
                            <form role="form">
                                <input type="text" class="form-control search" placeholder="Search here...">
                                <i class="fa fa-search"></i>
                            </form>
                        </div>*@<!-- End div #search -->
                    <!-- Sidebar menu -->
                    <div id="sidebar-menu">
                        <ul>
                            <li><a href=@Url.Action("Index", "Home")><i class="fa fa-bar-chart"></i> Dashboard</a></li>
                            <li><a href=@Url.Action("Index", "Transactions")><i class="fa fa-fw fa-plus"></i> Add Transaction</a></li>
                            <li><a href=@Url.Action("Index", "Transactions")><i class="fa fa-fw fa-exchange"></i>Accounts History</a></li>
                            <li><a href=@Url.Action("Index", "BudgetItems")><i class="fa fa-fw fa-usd"></i>View Budgets</a></li>
                            <li>
                                <a href="#fakelink"><i class="fa fa-cogs"></i><i class="fa fa-fw fa-angle-double-down i-right"></i> Manage</a>
                                <ul>
                                    <li><a href=@Url.Action("Details", "Households")><i class="fa fa-fw fa-angle-right"></i> Household</a></li>
                                    <li><a href=@Url.Action("Index", "Categories")><i class="fa fa-fw fa-angle-right"></i> Categories </a></li>
                                    <li><a href=@Url.Action("Index", "BudgetItems")><i class="fa fa-fw fa-angle-right"></i> Budgets</a></li>
                                    <li><a href=@Url.Action("Index", "Manage")><i class="fa fa-fw fa-angle-right"></i> Profile</a></li>
                                    @*@if (User.IsInRole("Admin"))
                                    {*@
                                        <li><a href=@Url.Action("Index", "BankAccounts")><i class="fa fa-fw fa-angle-right"></i> Accounts</a></li>
                                    @*}*@
                                @*</ul>
                            </li>*@
                        </ul>
                        <div class="clear"></div>
                    </div><!-- End div #sidebar-menu -->
                </div><!-- End div .sidebar-inner .slimscroller -->
            </div><!-- End div .body .rows .scroll-y -->
            <!-- Sidebar footer -->
            <div class="footer rows animated fadeInUpBig">
                <a href=@Url.Action("Index", "Demo") class="btn btn-success btn-demo">DEMO</a>
