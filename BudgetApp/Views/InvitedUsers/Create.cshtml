@model BudgetApp.Models.InvitedUser

@{
    ViewBag.Title = "Create";
}

<h2>Invite a New User</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Invite New User</h4>
        <p>An invite code will be emailed to the prospective user. This code is only valid for seven days, at which point you must re-invite the user.</p>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model=>model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model=>model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model=>model.Name, "", new { @class = "text-dadnger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model=>model.HasAdminRights, htmlAttributes:  new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBox("HasAdminRights", new { htmlAttributes = new { @class = "form-control", id="adminCk" } })
                @Html.ValidationMessageFor(model=>model.Email,"", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
