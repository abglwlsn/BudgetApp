@model BudgetApp.Models.BudgetItem

@{
    Layout = null;
}
<h2><strong>Edit</strong> Budget Item</h2>
@using (Html.BeginForm("Edit", "BudgetItems"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.CreatorId)
    @Html.HiddenFor(m => m.HouseholdId)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group login-input">
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Enter Budget Name" } })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
            @Html.DropDownList("CategoryId", null, "Choose Category", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.CheckBox("IsIncome", new { @id = "incomeCk" })
        <label class="income-text">Goal Income?</label>
        @Html.ValidationMessageFor(model => model.Income, "", new { @class = "text-danger" })
    </div>
    <div class="form-group login-input">
        @Html.EditorFor(model => model.AmountLimit, new { htmlAttributes = new { @class = "form-control text-input", id = "amt-editor" } })
        @Html.ValidationMessageFor(model => model.AmountLimit, "", new { @class = "text-danger" })
    </div>
    <div class="form-group login-input">
            @Html.DropDownList("WarningId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.WarningId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group login-input">
        @Html.CheckBox("AllowEdits", new {@id = "allow" })
        @Html.ValidationMessageFor(model => model.AllowEdits, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save Changes" class="btn btn-primary" />
            <button type="button" class="cancel-budg btn btn-primary">Cancel</button>
        </div>
    </div>

}

