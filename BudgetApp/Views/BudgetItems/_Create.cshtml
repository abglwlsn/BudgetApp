@model BudgetApp.Models.BudgetItem

        <h2><strong>Add</strong> Budget Item</h2>
        @using (Html.BeginForm("Create", "BudgetItems"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-12">
                <div class="form-group login-input">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control text-input", @placeholder = "Enter Budget Name" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Category</label>
                        @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <button type="button" id="ckbtn" class="btn btn-danger form-control"><span id="ck-text">Spending Limit</span></button>
                    <input id="ckbtn-ck" type="checkbox" name="Type" value="false">
                </div>
                <div class="form-group login-input">
                    @Html.EditorFor(model => model.AmountLimit, new { htmlAttributes = new { @class = "form-control text-input", id = "amt-editor", placeholder = "Enter goal spending limit amount" } })
                    @Html.ValidationMessageFor(model => model.AmountLimit, "", new { @class = "text-danger" })
                </div>
                <div class="form-group login-input">
                    <label>Warn when within:</label>
                        @Html.DropDownList("WarningId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.WarningId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <button type="button" id="allowbtn" class="btn btn-success form-control"><span id="allow-text">Anyone Can Edit</span></button>
                    <input id="allowbtn-ck" type="checkbox" name="AllowEdits" value="true" checked>
                </div>



                @*<div class="form-group login-input">
                    @Html.LabelFor(model => model.AllowEdits, htmlAttributes: new { @class = "control-label" })
                        <div class="checkbox">
                            @Html.EditorFor(model => model.AllowEdits)
                            @Html.ValidationMessageFor(model => model.AllowEdits, "", new { @class = "text-danger" })
                        </div>
                </div>*@
                <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary pull-right" />
                </div>
            </div>
        }
