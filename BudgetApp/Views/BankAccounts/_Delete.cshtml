@model BudgetApp.Models.BankAccount

@{
    ViewBag.Title = "Delete";
}

<div class="box-info">
    <div class="alert alert-danger">
        <p><strong>Warning!</strong>Are you sure you want to delete this account? All transactions and information attached to this account will be deleted.</p>
    </div>
    <dl>
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
        <dt>@Html.DisplayNameFor(model => model.Balance)</dt>
        <dd>@Html.DisplayFor(model => model.Balance)</dd>
        <dt>Includes:</dt>
        <dd>@Model.Transactions.Count() Transactions</dd>
    </dl>
    @using (Html.BeginForm("_Edit", "BankAccounts"))
    {
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        @Html.ActionLink("Back to List", "Index")
    </div>
    }
</div>

