@model IEnumerable<BudgetApp.Models.BankAccount>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-7">
        <div class="box-info">
            <h2><strong>All</strong> Accounts</h2>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>
                            Account
                        </th>
                        <th>
                            Balance
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var account in Model)
                    {
                        <tr>
                            <td>@account.Name</td>
                            <td class="balance text-succ">@account.Balance</td>
                            @*render partial view of transactions on click*@
                            <td>
                                <button class="viewAcctTrans btn btn-sm btn-primary" data-id="@account.Id" type="button">Recent Transactions</button>
                                @*@if (User.IsInRole("Admin"))
                                    {*@
                                <button class="editAcct btn btn-sm btn-primary" data-id="@account.Id" type="button">Edit</button>
                                <button class="deleteAcct btn btn-sm btn-danger" data-id="@account.Id" type="button">Delete</button>
                            </td>
                            @*}*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @*@if(User.IsInRole("Admin"))
        {*@
    <div class="col-md-5">
        <div id="editView">
            @Html.Action("_Create")
        </div>
    </div>
    @*}*@
</div>
<div class="row">
    <div class="transactions col-md-10 col-md-offset-1">
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}